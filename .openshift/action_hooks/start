#!/bin/bash
cd $OPENSHIFT_REPO_DIR
export JAVA_HOME=/etc/alternatives/java_sdk_1.8.0
export PATH=$JAVA_HOME/bin:$PATH
nohup java -jar $SHARE_MY_WEEK_APP_DIR/*.jar --server.port=$OPENSHIFT_DIY_PORT --server.address=$OPENSHIFT_DIY_IP --spring.mail.host=$SHARE_MY_WEEK_SMTP_HOST --spring.mail.port=$SHARE_MY_WEEK_SMTP_PORT --spring.mail.username=$SHARE_MY_WEEK_SMTP_USER --spring.mail.password=$SHARE_MY_WEEK_SMTP_PASS --spring.mail.test-connection=true --spring.mail.protocol=smtp --spring.mail.properties.mail.debug=true --spring.mail.properties.mail.smtp.auth=true --sharemyweek.thirdparty.eventbrite.token=$SHARE_MY_WEEK_EVENTBRITE_TOKEN --spring.data.mongodb.uri=mongodb://$OPENSHIFT_MONGODB_DB_HOST:$OPENSHIFT_MONGODB_DB_PORT/$OPENSHIFT_MONGODB_DB_NAME --spring.data.mongodb.username=$OPENSHIFT_MONGODB_DB_USERNAME --spring.data.mongodb.password=$OPENSHIFT_MONGODB_DB_PASSWORD &